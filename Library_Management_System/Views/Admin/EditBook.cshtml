@model Library_Management_System.Models.Book

@{
    ViewData["Title"] = "Edit Book";
}

<h2>Edit Book</h2>

<form asp-action="EditBook" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="BookID" />

    <div class="form-group mb-2">
        <label>Book Name</label>
        <input asp-for="BookName" class="form-control" required />
    </div>

    <div class="form-group mb-2">
        <label>Author</label>
        <input asp-for="Author" class="form-control" required />
    </div>

    <div class="form-group mb-2">
        <label>Details</label>
        <textarea asp-for="Detail" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-group mb-2">
        <label>Price</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label>Publication</label>
        <input asp-for="Publication" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label>Branch</label>
        <input asp-for="Branch" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label>Quantity</label>
        <input asp-for="Quantities" type="number" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label>Available Quantity</label>
        <input asp-for="AvailableQnt" type="number" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label>Rent Quantity</label>
        <input asp-for="RentQnt" type="number" class="form-control" />
    </div>

    <!-- Book Image Upload -->
    <div class="form-group mb-2">
        <label>Book Image</label>
        <input type="file" name="ImageFile" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <div class="mt-2">
                <img src="@Model.Image" alt="@Model.BookName" style="height:100px;" />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a class="btn btn-secondary" href="/Admin/Books">Cancel</a>
</form>
