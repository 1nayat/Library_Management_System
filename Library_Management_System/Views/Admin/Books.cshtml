@using Library_Management_System.Pagination
@model PaginatedList<Library_Management_System.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<h2>Books</h2>

<div class="mb-2 d-flex justify-content-between">
    <!-- Back to Dashboard -->
    <a class="btn btn-secondary" asp-controller="Admin" asp-action="Dashboard">Back to Dashboard</a>

    <!-- Add Book -->
    <a class="btn btn-success" href="/Admin/CreateBook">Add Book</a>
</div>

<!-- Search Form -->
<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" value="@ViewBag.SearchTerm" class="form-control" placeholder="Search books by name or author..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<!-- Books Table -->
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Book ID</th>
            <th>Name</th>
            <th>Author</th>
            <th>Publication</th>
            <th>Branch</th>
            <th>Quantity</th>
            <th>Available</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Items)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(book.Image))
                    {
                        <img src="@book.Image" alt="@book.BookName" class="book-image" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@book.BookID</td>
                <td>@book.BookName</td>
                <td>@book.Author</td>
                <td>@book.Publication</td>
                <td>@book.Branch</td>
                <td>@book.Quantities</td>
                <td>@book.AvailableQnt</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/Admin/EditBook/@book.BookID">Edit</a>
                    <a class="btn btn-sm btn-danger" href="/Admin/DeleteBook/@book.BookID" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?search=@ViewBag.SearchTerm&page=@(Model.PageIndex - 1)">Previous</a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" href="?search=@ViewBag.SearchTerm&page=@i">@i</a>
                </li>
            }

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" href="?search=@ViewBag.SearchTerm&page=@(Model.PageIndex + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
}

<style>
   
    .book-image {
        height: 80px;
        width: auto;
        transition: transform 0.3s ease;
        position: relative; 
        z-index: 1;
    }

        .book-image:hover {
            transform: scale(3); 
            position: relative;
            z-index: 999; 
        }
</style>

