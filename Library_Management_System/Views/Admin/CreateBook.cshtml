@model Library_Management_System.Models.Book

@{
    ViewData["Title"] = "Add New Book";
}

<h2>Add New Book</h2>

<form asp-action="CreateBook" method="post" enctype="multipart/form-data">
    <div class="form-group mb-2">
        <label>Book Name</label>
        <input asp-for="BookName" class="form-control" required />
    </div>
    <div class="form-group mb-2">
        <label>Author</label>
        <input asp-for="Author" class="form-control" required />
    </div>
    <div class="form-group mb-2">
        <label>Detail</label>
        <textarea asp-for="Detail" class="form-control"></textarea>
    </div>
    <div class="form-group mb-2">
        <label>Price</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label>Publication</label>
        <input asp-for="Publication" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label>Branch</label>
        <input asp-for="Branch" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label>Quantities</label>
        <input asp-for="Quantities" type="number" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label>Available Quantity</label>
        <input asp-for="AvailableQnt" type="number" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label>Rent Quantity</label>
        <input asp-for="RentQnt" type="number" class="form-control" />
    </div>
   
    

    <button type="submit" class="btn btn-primary">Add Book</button>
    <a class="btn btn-secondary" href="/Admin/Books">Cancel</a>
</form>
