@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Admin Dashboard</h2>
    <form asp-controller="Auth" asp-action="Logout" method="post">
        <button type="submit" class="btn btn-danger">Logout</button>
    </form>
</div>

<div class="mb-3">
    <p>Total Students: @ViewBag.TotalStudents</p>
    <p>Total Books: @ViewBag.TotalBooks</p>
    <p>Total Issued Books: @ViewBag.TotalIssued</p>
</div>

<div>
    <a class="btn btn-primary" href="/Admin/Students">Manage Students</a>
    <a class="btn btn-primary" href="/Admin/Books">Manage Books</a>
    <a class="btn btn-primary" href="/Admin/IssuedBooks">Manage Issued Books</a>
    <a class="btn btn-primary" href="/Admin/Penalties">Manage Penalties</a>
    <a class="btn btn-success" href="/Admin/IssueBook">Issue New Book</a>


</div>
