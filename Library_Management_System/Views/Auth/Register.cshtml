@{
    ViewData["Title"] = "Register";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg register-card">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4 fw-bold">Register</h2>

                    @* Display global errors *@
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <p class="mb-0">@error.ErrorMessage</p>
                            }
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="RegisterPost" method="post">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Name</label>
                            <input name="name" type="text" class="form-control rounded-pill input-shadow" placeholder="Enter your full name" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Email</label>
                            <input name="email" type="email" class="form-control rounded-pill input-shadow" placeholder="Enter your email" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Password</label>
                            <input name="password" type="password" class="form-control rounded-pill input-shadow" placeholder="Enter your password" required />
                        </div>
                        <button type="submit" class="btn btn-success w-100 rounded-pill btn-hover">
                            Register
                        </button>
                    </form>

                    <p class="mt-3 text-center text-muted">
                        Already have an account?
                        <a asp-controller="Auth" asp-action="Login" class="fw-semibold text-decoration-none link-hover">Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .register-card {
        border-radius: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

      

    .input-shadow {
        box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.08);
        transition: box-shadow 0.3s ease;
    }

        .input-shadow:focus {
            box-shadow: 0 0 8px rgba(25, 135, 84, 0.6);
            border-color: #198754;
            outline: none;
        }

    .btn-hover {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .btn-hover:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    .link-hover:hover {
        color: #198754;
        text-decoration: underline;
    }
</style>

<!-- Optional: Bootstrap JS for alert dismiss -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
