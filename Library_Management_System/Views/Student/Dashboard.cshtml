@* /Views/Student/Dashboard.cshtml *@
@{
    ViewData["Title"] = "Student Dashboard";
}

<h2 class="mb-4 text-center">Welcome, <span class="text-primary">@ViewBag.StudentName</span>!</h2>

<div class="row mb-4">
    <!-- Total Books -->
    <div class="col-md-4 mb-3">
        <div class="card text-white bg-info h-100 shadow-sm dashboard-card">
            <div class="card-body d-flex flex-column align-items-center justify-content-center">
                <i class="bi bi-book-fill fs-1 mb-2"></i>
                <h5 class="card-title">Total Books in Library</h5>
                <p class="card-text fs-4">@ViewBag.TotalBooks</p>
            </div>
        </div>
    </div>

    <!-- Books Issued -->
    <div class="col-md-4 mb-3">
        <div class="card text-white bg-success h-100 shadow-sm dashboard-card">
            <div class="card-body d-flex flex-column align-items-center justify-content-center">
                <i class="bi bi-journal-check fs-1 mb-2"></i>
                <h5 class="card-title">Books You Have Issued</h5>
                <p class="card-text fs-4">@ViewBag.MyIssued</p>
            </div>
        </div>
    </div>

    <!-- Pending Penalties -->
    <div class="col-md-4 mb-3">
        <div class="card text-white bg-danger h-100 shadow-sm dashboard-card">
            <div class="card-body d-flex flex-column align-items-center justify-content-center">
                <i class="bi bi-exclamation-triangle-fill fs-1 mb-2"></i>
                <h5 class="card-title">Pending Penalties</h5>
                <p class="card-text fs-4">@ViewBag.MyPenalties</p>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center gap-3 flex-wrap">
    <a class="btn btn-primary btn-lg dashboard-btn" href="/Student/AvailableBooks">
        <i class="bi bi-search me-2"></i> Browse Books
    </a>
    <a class="btn btn-success btn-lg dashboard-btn" href="/Student/MyBooks">
        <i class="bi bi-bookmark-check me-2"></i> My Issued Books
    </a>
    <a class="btn btn-warning btn-lg dashboard-btn" href="/Student/MyPenalties">
        <i class="bi bi-cash-stack me-2"></i> My Penalties
    </a>
    <form asp-controller="Auth" asp-action="Logout" method="post" style="display:inline;">
        <button type="submit" class="btn btn-danger btn-lg dashboard-btn">
            <i class="bi bi-box-arrow-right me-2"></i> Logout
        </button>
    </form>
</div>

<style>
    h2 {
        font-weight: 700;
    }

    /* Card hover effect */
    .dashboard-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

        .dashboard-card:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.25);
        }

    /* Button hover effect */
    .dashboard-btn {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .dashboard-btn:hover {
            transform: translateY(-2px) scale(1.05);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

    /* Icon size for cards */
    .dashboard-card i {
        font-size: 3rem;
        transition: transform 0.3s ease;
    }

    .dashboard-card:hover i {
        transform: rotate(10deg) scale(1.2);
    }



    
</style>

<!-- Include Bootstrap Icons if not already in _Layout.cshtml -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
