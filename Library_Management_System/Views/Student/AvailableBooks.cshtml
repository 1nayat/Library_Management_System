@model IEnumerable<Library_Management_System.Models.Book>

@{
    ViewData["Title"] = "Available Books";
    var currentPage = ViewBag.Page ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
    string search = ViewBag.Search ?? "";
}

<h2>Available Books</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<div class="mb-3 d-flex justify-content-between">
    <a class="btn btn-secondary" asp-controller="Student" asp-action="Dashboard">Back to Dashboard</a>
</div>

<!-- 🔍 Search Form -->
<form method="get" asp-action="AvailableBooks" class="mb-3 row">
    <div class="col-md-4">
        <input type="text" name="search" value="@search" class="form-control" placeholder="Search by title or author..." />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<!-- 📚 Books Table -->
<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Author</th>
            <th>Available Copies</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No books available.</td>
            </tr>
        }
        else
        {
            @foreach (var book in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(book.Image))
                        {
                            <img src="@book.Image" alt="@book.BookName" class="book-image" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>@book.BookName</td>
                    <td>@book.Author</td>
                    <td>@book.AvailableQnt</td>
                    <td class="text-center">
                        <form asp-controller="Student" asp-action="IssueBook" method="post" style="display:inline;">
                            <input type="hidden" name="bookId" value="@book.BookID" />
                            <button type="submit" class="btn btn-success btn-sm" @(book.AvailableQnt <= 0 ? "disabled" : "")>
                                Issue Book
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- 🔢 Pagination -->
@if (totalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            @if (currentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="AvailableBooks"
                       asp-route-search="@search"
                       asp-route-page="@(currentPage - 1)">Previous</a>
                </li>
            }

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="AvailableBooks"
                       asp-route-search="@search"
                       asp-route-page="@i">@i</a>
                </li>
            }

            @if (currentPage < totalPages)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="AvailableBooks"
                       asp-route-search="@search"
                       asp-route-page="@(currentPage + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
}

<style>
    /* Hover zoom effect */
    .book-image {
        height: 80px;
        width: auto;
        transition: transform 0.3s ease;
        z-index: 1;
        position: relative;
    }

        .book-image:hover {
            transform: scale(3);
            z-index: 999;
            position: relative;
        }
</style>
